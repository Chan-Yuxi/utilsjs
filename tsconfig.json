{
    "extends": ["@tsconfig/recommended/tsconfig.json"],
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "bundler",

        "declaration": true,
        "declarationDir": "dist/types",
        "emitDeclarationOnly": true,
        
        "noUnusedParameters": true,
        "noImplicitReturns": true,

        "useDefineForClassFields": true
    },
    "include": ["src/**/*.ts"]
}
